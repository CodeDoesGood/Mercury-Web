#%RAML 1.0
title: Project endpoint
version: 1
protocols: [ HTTP ]
baseUri: /{version}
mediaType: application/json

types:
  Project:
    description: A standard project
    type: !include project.json
  
  createdProject:
    description: The response message you will get when creating a new project
    type: !include projectCreatePostResponse.json
      
  GetProject:
    description: The response of a get request to the project endpoint
    type: !include projectGetResponse.json
  
  PostProject:
    description: The required body to update a project
    type: !include postProjectBody.json

/project:
  post:
    description: Create a new project
    body: Project
    responses:
      200:
        body: createdProject
  /{project_id}:
    get:
      description: Get a existing project by a project id
      responses:
        200:
          body: GetProject
    post:
      description: update a existing project by id
      body: PostProject
